<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.NativeContentAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ad_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            />

        <FrameLayout
            android:id="@+id/ad_video_container"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/ad_action_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/ad_img"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/ad_img"
            android:layout_toStartOf="@+id/ad_action_btn"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ad_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ad_title"
            android:layout_toEndOf="@id/ad_title"
            android:layout_toStartOf="@id/ad_title"/>


    </RelativeLayout>
</com.google.android.gms.ads.formats.NativeContentAdView>
